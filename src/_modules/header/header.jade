header.header.-ontop

    #weather

    ._hamburguer
        span
        span
        span
        
    .container
        ._logo
            a(href="/")
                img(src="/images/logo.png")
                
        nav._nav
            ul._menu
                each item in site.data.menu
                    li
                        if (item.submenu)
                            a(href="#")= item.name
                            ul._submenu
                                each option in item.options
                                    li
                                        a(href=option.url)= option.name
                        else
                            a(href=item.url)= item.name
                        
                        
                        
        ul._social
            each item in site.data.social
                li
                    a(href=item.url)
                        i(class="fa fa-#{item.name}")
                        
        ul._lang
            li
                a.-active(data-lang="Español") ESP
            li
                a(data-lang="Inglés") ENG
            li
                a(data-lang="Portugués") PTG
                
        div(id="google_translate_element")
        
        script.
             function googleTranslateElementInit() {
                 new google.translate.TranslateElement({ pageLanguage: 'es', includedLanguages: 'es,en,pt', layout: google.translate.TranslateElement.InlineLayout.SIMPLE }, 'google_translate_element');
             }
        
        script(src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit")
                        
                                
