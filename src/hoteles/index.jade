extends ../_layouts/base

include ../_modules/hero/hero
include ../_modules/card/card

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.hoteles

        +hero('/images/hotel/hero.jpg', site.data.hotel.heading, site.data.hotel.subHeading)
        
        .container-fluid.-vertical-space
            .row
                .col-xs-24
                    ul.card-list
                        each item in site.data.hotel.hotels
                            li
                                +card(item)
