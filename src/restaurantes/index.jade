extends ../_layouts/base

include ../_modules/hero/hero
include ../_modules/card/card

block config
  //- Correct base url pathing for this page
  - var baseUrl = '../'

block content
    main.restaurantes

        +hero('/images/restaurant/hero.jpg', site.data.restaurant.heading, site.data.restaurant.subHeading)
        
        .container-fluid.-vertical-space
            .row
                .col-xs-24
                    ul.card-list
                        each item in site.data.restaurant.restaurants
                            li
                                +card(item)
